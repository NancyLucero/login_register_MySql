<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS--> 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="resources/css/style.css">
    <!--<link rel="stylesheet" href="resources/css/bootstrap.min.css">-->
    <link rel="Shortcut Icon" href="resources/img/ico/base3.ico" />
    <title>Lamps</title>
    <script>
        function text(x){
            if (x==0){
                // se oculta o activa div
            }
        }
    </script>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-ligth">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Lamps</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Inicio</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/shop">Shop</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/designer">Dise√±adores</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/contacto">Contacto</a>
              </li>                            
            </ul>            
            <!--aqui va datos del logeo--> 
            <ul class="navbar-nav ms-auto">
                <% if(login) { %>
                  <li class="nav-item">
                  Usuario: <strong><%= name %></strong>
                  <a href="logout" class="a-logout salir">Salir</a>
                </li>
            </ul>
              
                    
                <%}else {%>  
                <li class="nav-item">
                  <a class="nav-link" href="/login">Inicio de sesion</a>
                </li>  
                <%}%>  
            </ul>                  
          </div>
        </div>
    </nav>    
    <div class="container">
        <div class="container">
            <div class="row mt-5">
                <div class="col-md-4">
                    <% if (cart) {%>                   
                    <table class="table table-bordered">
                        <tbody>
                            <% carritos.forEach(function(producto) { %>
                                <tr>                        
                                    <!--<td width="50%" height="50%" valign="top" background="resources/img/productos/<%= producto.imagen %>">-->        
                                    <td height=100 width=100>
                                        <img src="resources/img/productos/<%= producto.imagen %>" height=100 width=100 alt="...">                                        
                                    </td>
                                    <td align="center">                                        
                                        <p class="card-title"><%= producto.nombre %></p>
                                        <p class="card-text"><strong><%= producto.autor %></strong></p>
                                        <form method="post" action="editarCantidad">
                                            <input type="hidden" name="id" value="<%= producto.idProducto %>">
                                            <input type="submit" value="-" class="edit-btn" name="decrementar">                                             
                                            <input type="text" class=""  size=2 name="cantidad" value="<%= producto.cantidad %>" readonly>  
                                            <input type="submit" value="+" class="edit-btn" name="incrementar">
                                        </form>
                                        <% var importe = parseInt(producto.precio)*parseInt(producto.cantidad); %>
                                        <span>$ <%= importe %></span>
                                        <form action="quitarProducto" method="post">
                                            <input type="hidden" name="id" value="<%= producto.idProducto %>">
                                            <input class="btn btn-dark" type="submit" name="quitar" value="quitar"> 
                                        </form>                      
                                    </td>               
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>                   
                    
                </div>
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-body">
                            <form action="comprar" method="post">
                                <h3>Informacion de Contacto</h3>
                                <div class="">
                                    <input type="text" name="nombre" placeholder="Apellido y Nombre" class="form-control">                    
                                </div>
                                <div>
                                    <input type="text" name="direccion" placeholder="Direccion" class="form-control">
                                </div>
                                <div>
                                    <input type="text" name="telefono" placeholder="telefono" class="form-control">
                                    <input type="email" name="mail" placeholder="Mail" class="form-control">
                                </div>

                                <div class="container-fluid">
                                <h3>Forma de Pago</h3>
                                <div>
                                    <input name="forma" type="radio" value="efectivo" onclick="text(0)" checked />Efectivo
                                </div>
                                <div>
                                    <input name="forma" type="radio" value="tcredito" onclick="text(1)" />Tarjeta de Credito
                                </div>                
                                <h3>Tipo de Envio</h3>
                                <div>
                                    <input name="envio" type="radio" value="retirar" onclick="text(0)" checked />Retirar Local
                                </div>
                                <div>
                                    <input name="envio" type="radio" value="correo" onclick="text(1)" />Correo Argentino
                                </div>     

                                </div>
                                <h3>Total</h3>
                               
                                <div>
                                    <label>Subtotal: $  <%= total %></label>
                                    <label>Comision: $ 0.00</label>
                                    <label><strong> $ <%= total %></strong></label>
                                </div>
                                <div> 
                                    <% var formaPago="efectivo"; var tipoEnvio="local" %>
                                    <input type="submit" class="btn btn-dark" value="pagar">                           
                                    <!--<a href="/comprar" class="btn btn-dark">Pagar</a>-->
                                </div>
                                
                            </form>
                        </div>
                    </div>            
                </div>
            </div>
        </div>
        <%}%>
        
        
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <% if (typeof alert != "undefined") { %>
            <script>
                Swal.fire({
                    title: '<%= alertTitle %>',
                    text: '<%= alertMessage %>',
                    icon: '<%= alertIcon %>',
                    showConfirmButton: '<%= showConfirmButton %>',
                    timer: '<%= timer %>'
                }).then(()=>{
                    window.location='/<%= ruta %>'
                })
            </script>
          <% } %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>